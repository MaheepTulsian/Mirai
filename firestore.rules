rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Saved items subcollection
      match /saved_items/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Jobs - all authenticated users can read
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Internships - all authenticated users can read
    match /internships/{internshipId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Courses - all authenticated users can read
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Guides - all authenticated users can read
    match /guides/{guideId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Roadmaps - all authenticated users can read
    match /roadmaps/{roadmapId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Colleges - all authenticated users can read
    match /colleges/{collegeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // GSoC documents
    match /gsoc_documents/{year} {
      allow read: if request.auth != null;

      match /organizations/{orgId} {
        allow read: if request.auth != null;
      }
    }

    // Contributors - all authenticated users can read
    match /contributors/{contributorId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Profile - users can read/write their own profile
    match /profile/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == profileId;
    }

    // Saved - all authenticated users can read/write
    match /saved/{savedId} {
      allow read, write: if request.auth != null;
    }

    // App configuration (help, about, rate sections)
    match /app/{sectionId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins should edit via console
    }

    // User reports for jobs/internships
    match /reports/{reportId} {
      allow create: if request.auth != null; // Users can submit reports
      allow read: if request.auth != null && request.auth.uid == resource.data.userId; // Users can read their own reports
      allow update, delete: if false; // Only admins can update/delete
    }

    // Feedback - users can submit feedback
    match /feedback/{feedbackId} {
      allow create: if request.auth != null; // Users can submit feedback
      allow read: if request.auth != null && request.auth.uid == resource.data.userId; // Users can read their own feedback
      allow update, delete: if false; // Only admins can update/delete
    }

    // Default - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
